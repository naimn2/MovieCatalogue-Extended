<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_poster_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:contentDescription="@string/poster_movie"
        tools:srcCompat="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tv_title_widget"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#A3333333"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="20sp"
        android:maxLines="1"
        android:textColor="@color/widget_title_text"
        android:ellipsize="end"
        android:layout_alignBottom="@+id/iv_poster_widget"
        android:layout_alignStart="@+id/iv_poster_widget"
        android:layout_alignEnd="@id/iv_poster_widget"/>

</RelativeLayout>